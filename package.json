{
  "name": "webcli-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "WebCLI MVP single-node implementation",
  "type": "module",
  "scripts": {
    "dev": "tsx watch backend/src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "node --test --import tsx tests/unit/**/*.test.ts",
    "test:e2e": "node --test --import tsx tests/e2e/**/*.test.ts",
    "check": "npm run build && npm run test",
    "check:all": "npm run check && npm run test:e2e"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.0",
    "@fastify/websocket": "^11.0.0",
    "@xterm/headless": "^5.5.0",
    "fastify": "^5.2.1",
    "node-pty": "^1.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/ws": "^8.18.1",
    "playwright": "^1.51.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}

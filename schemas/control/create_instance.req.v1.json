{
  "$id": "https://webcli.local/schema/control/create_instance.req.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreateInstance Request Payload v1",
  "type": "object",
  "required": ["user_id", "command", "workdir", "env", "cols", "rows"],
  "properties": {
    "user_id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "node_id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "command": { "type": "string", "minLength": 1, "maxLength": 4096 },
    "workdir": { "type": "string", "minLength": 1, "maxLength": 4096 },
    "env": {
      "type": "object",
      "additionalProperties": { "type": "string", "maxLength": 4096 }
    },
    "cols": { "type": "integer", "minimum": 1, "maximum": 500 },
    "rows": { "type": "integer", "minimum": 1, "maximum": 300 }
  },
  "additionalProperties": false
}
